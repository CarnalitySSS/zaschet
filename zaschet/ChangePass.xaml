<Window x:Class="ChangePass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Смена пароля" 
        Height="425" Width="398"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="0" Text="Смена пароля" FontSize="26" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,25" Foreground="#0078D4"/>

        <TextBlock Grid.Row="1" Text="Логин:" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="2" Name="LoginTextBox" Height="35" Margin="0,0,0,15" 
                 FontSize="14" Padding="5" VerticalContentAlignment="Center"
                 TextChanged="LoginTextBox_TextChanged"/>

        <TextBlock Grid.Row="3" FontWeight="SemiBold" Margin="0,0,0,5"><Run Language="ru-ru" Text="Новый пароль"/></TextBlock>
        <PasswordBox Grid.Row="4" Name="PasswordBox" Height="35" Margin="0,0,0,25" 
                     FontSize="14" Padding="5" VerticalContentAlignment="Center"
                     PasswordChanged="PasswordBox_PasswordChanged"/>

        <TextBlock Grid.Row="5" Name="ErrorMessageText" Text="" Foreground="Red" 
                   FontWeight="SemiBold" TextWrapping="Wrap" Margin="0,0,0,15"
                   Visibility="Collapsed" HorizontalAlignment="Center"/>

        <Button Grid.Row="6" Content="Сохранить" Name="LoginButton" 
                Height="40" Background="#0078D4" Foreground="Black"
                FontSize="16" FontWeight="Bold" 
                Click="LoginButton_Click" IsEnabled="False"
                Cursor="Hand"/>
        <TextBlock Grid.Row="5" FontWeight="SemiBold" Margin="0,0,0,91"><Run Language="ru-ru" Text="Подтвердите новый пароль"/></TextBlock>
        <PasswordBox Grid.Row="4" x:Name="PasswordBox_Copy" Height="35" Margin="0,47,0,10" 
            FontSize="14" Padding="5" VerticalContentAlignment="Center"
            PasswordChanged="PasswordBox_PasswordChanged" Grid.RowSpan="2"/>
    </Grid>
</Window>